<!-- The Grid -->
<div class="row">
	
	<script type ="text/javascript">
		$(window).load(function() {
			$('#featured').orbit({
				bullets: true
			});
		});
	</script>
	
	<% content_for :not_authorized do %>

		<% end %>
	
	<div class="row">
		<div class="eight columns centered">
			<div id= "featured">
				<img src="http://cambelt.co/800x300/Mock-Up?color=,987423" data-caption="#caption" />
				<div class="content">
					<div class="row">
						<div class="eight columns">
							<h1 class="content">V-Team</h1>
							<h3 class="content">Your personal TEAM of lawyers for any law music, media, arts and technology.</h3>
						</div>
						<div class="four columns">
							<%= image_tag("Favorites.png", :class=>"content") %>
						</div>
					</div>
				</div>
				<div class="content">
					<div class="row">
						<div class="eight columns">
							<h1 class="content">Talk</h1>
							<h3 class="content">Speak to any of our attorneys virtually through SKYPE anytime.</h3>
						</div>
						<div class="four columns">
							<%= image_tag("IM.png", :class=>"content") %>
						</div>
					</div>
				</div>
				<div class="content">
					<div class="row">
						<div class="eight columns">
							<h1 class="content">Download</h1>
							<h3 class="content">Quick and Affordable Expertly Crafted Contracts.</h3>
						</div>
						<div class="four columns">
							<%= image_tag("Downloads.png", :class=>"content") %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
		
		<span class="orbit-caption" id="caption">Mock-ups according to Nicole's kick a** design.</span>

	<% content_for :body do %>

	<div class="row">
		<div class="four columns">
			<br/>
			<div class="panel" align="center">
				<p class="panel-title">ONE CLICK AWAY</p>
				<ul class="panel-text">
					<li>Rock solid (and affordable) forms for all your needs</li>
					<li>An online appointment via Skype</li>
				</ul>
			</div>
		</div>
		<div class="four columns">
			<br/>
			<div class="panel" align="center">
				<p class="panel-title">HOW IT WORKS</p>
				<ol class="panel-text">
					<li>Register for a secure account page.</li>
					<li>Complete estate planning worksheet with guidance from your attorney.</li>
					<li>The attorney reviews your documents and discusses them with you.</li>
					<li>Pay online and choose from a number of payment options.</li>
					<li>Receive estate planning documents ready to sign with instructions.</li>
				</ol>
			</div>
		</div>
		<div class="four columns">
			<br/>
			<div class="panel" align="center">
				<p class="panel-title">WHO WE ARE</p>
				<ul class="panel-text">
					<li>Some of the most celebrated attorneys, scholars, and industry experts</li>
				</ul>
			</div>
		</div>
	</div>
	
	<% end %>
		
</div>


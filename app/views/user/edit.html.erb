<div class="container">
	<div class="row">
		<div class="twelve columns">
			<div class="row">
				<div class="two columns" style="background-color: gray">
					<h2 align="center">V</h2>
					<h2 align="center">L</h2>
					<h2 align="center">O</h2>
				</div>
				<div class="eight columns">
				<h2>Registration!</h2>
				<h4 class="subheader">You're gonna love it!</h4>
					<%= form_for(@user) do |f| %>
					  <div>
					  	<%= f.label :title %>
					  	<%= f.select :title, ["Mr.","Mrs.","Ms.","Dr."]%>
					  </div>
					  <div>
					    <%= f.label :first_name %>
					    <%= f.text_field :first_name %>
					  </div>
					  <div>
					    <%= f.label :middle_name %>
					    <%= f.text_field :middle_name%>
					  </div>
					  <div>
					    <%= f.label :last_name%>
					    <%= f.text_field :last_name %>
					  </div>
					  <div>
					    <%= f.label :suffix%>
					    <%= f.select :suffix, ["Jr.","Sr.","Esq."] %>
					  </div>
					
					  <div><%= f.submit "Update" %></div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
			